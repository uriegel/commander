{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Main Process",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "env": {
                "VITE_DEV_SERVER_URL": "http://localhost:5173"
            },
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args" : ["."],            
            "outputCapture": "std"
        }, {
            "name": "Launch Native (Linux)",
            "type": "cppdbg",
            "environment": [
                { "name": "VITE_DEV_SERVER_URL", "value": "http://localhost:5173" }
            ],           
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/electron/dist/electron",
            "args": [ "." ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        }, {
            "name": "Launch Native (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\node_modules\\electron\\dist\\electron.exe",
            "args": [ "." ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
        }
    ]
}

