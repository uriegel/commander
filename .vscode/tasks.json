{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "prepare",
            "type": "npm",
            "script": "electron",
        }, {
            "label": "buildF",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }, {
            "label": "buildFRelease",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-c",
                "Release",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }, {
            "label": "buildRelease",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["tsc electron", "webpack-prod", "buildFRelease"]
        }, {
            "label": "build",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["prepare", "buildF"]
        }            
    ]
}