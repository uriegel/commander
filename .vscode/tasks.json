{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "buildReact",
            "type": "npm",
            "script": "build",
        }, {
            "label": "buildReact Windows",
            "type": "npm",
            "script": "build Windows",
        }, {
            "label": "buildFs",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "Commander",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }, {
            "label": "buildFsRelease",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "Commander",
                "-c",
                "Release",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }, {
            "label": "buildRelease",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["buildReact", "buildFsRelease"]
        }, {
            "label": "buildRelease Windows",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["buildReact Windows", "buildFsRelease"]
        }, {
            "label": "build",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["prepare", "buildFs"]
        }            
    ]
}