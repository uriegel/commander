{
  "name": "commander",
  "version": "1.0.0",
  "description": "A Norton Commander clone based on Electron and  Web Components",
  "main": "electron/dist/main.js",
  "scripts": {
    "builddev": "webpack --config webpack.dev.js",
    "build": "npm run build-rust-release && webpack --config webpack.prod.js",
    "start": "npm run tsc && npm run build-rust-release && npm run builddev && electron .",
    "dist": "npm run build && electron-builder",
    "debug-rust": "npm run build-rust-debug && node --nolazy --inspect-brk=9229 rust-test/index.js",
    "build-rust": "cargo-cp-artifact -nc local-modules/rust-addon/index.node -- cargo build --message-format=json-render-diagnostics",
    "build-rust-debug": "npm run build-rust --",
    "build-rust-release": "npm run build-rust -- --release",
    "tsc": "tsc -p electron/typescript"
  },
  "build": {
    "appId": "de.uriegel.commander",
    "copyright": "Copyright 2021 Uwe Riegel",
    "productName": "Commander",
    "electronVersion": "16.0.5",
    "nodeGypRebuild": false,
    "files": [
      "!.vscode",
      "!rust-test",
      "!src",
      "!local-modules",
      "!target",
      "!Cargo.*",
      "!webpack.*"
    ],
    "linux": {
      "target": [
        "snap"
      ],
      "icon": "web/assets/kirk.png"
    },
    "win": {
      "target": "nsis",
      "icon": "kirk.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uriegel/window-commander.git"
  },
  "keywords": [
    "electron",
    "javascript",
    "nodejs",
    "web",
    "components"
  ],
  "author": "Uwe Riegel <uriegel@hotmail.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uriegel/window-commander/issues"
  },
  "homepage": "https://github.com/uriegel/window-commander#readme",
  "dependencies": {
    "electron-settings": "^4.0.2",
    "rust-addon": "file:local-modules/rust-addon",
    "shared-module": "file:local-modules/shared-module",
    "theme-change-detect": "1.0.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.14",
    "cargo-cp-artifact": "^0.1.6",
    "electron": "^16.0.5",
    "electron-builder": "^22.13.1",
    "grid-splitter": "^1.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "virtual-table-component": "^2.0.1",
    "web-dialog-box": "^3.0.1",
    "web-electron-titlebar": "^1.0.0",
    "web-menu-bar": "^1.0.1",
    "web-pie-progress": "^1.0.0",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
