{
  "name": "commander",
  "version": "1.0.0",
  "description": "A Norton Commander clone based on Electron and React with Typescript",
  "main": "dist/main/index.js",
  "type": "module",
  "author": {
    "name": "Uwe Riegel",
    "email": "uriegel@hotmail.de"
  },
  "build": {
    "appId": "de.uriegel.commander",
    "productName": "Commander",
    "removePackageScripts": true,
    "asar": true,
    "asarUnpack": [],
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "python/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],    
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icons",
      "desktop": {
        "entry": {
          "StartupWMClass": "commander"
        }
      }
    }
  },
  "scripts": {
    "dev": "npm run build && concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -p tsconfig.json",
    "dist": "vite build && npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uriegel/commander.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uriegel/commander/issues"
  },
  "homepage": "https://github.com/uriegel/commander#readme",
  "dependencies": {
    "electron-settings": "^4.0.4",
    "filesystem-utilities": "^6.0.3",
    "functional-extensions": "^1.9.17",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.20",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.11",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.20",
    "leaflet": "^1.9.4",
    "menubar-react": "^2.2.0",
    "react-leaflet": "^5.0.0",
    "typescript": "^5.9.3",
    "view-split-react": "^1.2.0",
    "virtual-table-react": "^10.10.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
