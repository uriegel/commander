{
  "name": "commander",
  "version": "1.4.5",
  "description": "A Norton Commander clone based on Electron and React with Typescript",
  "main": "dist/main/main.js",
  "type": "module",
  "author": {
    "name": "Uwe Riegel",
    "email": "uriegel@hotmail.de"
  },
  "build": {
    "appId": "de.uriegel.commander",
    "productName": "Commander",
    "removePackageScripts": true,
    "asar": true,
    "asarUnpack": [],
    "files": [
      "icons/64x64.png",
      "dist/main/**/*",
      "dist/renderer/index.html",
      "dist/renderer/assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icons",
      "desktop": {
        "entry": {
          "StartupWMClass": "commander"
        }
      }
    }
  },
  "scripts": {
    "dev": "npm run build && vite",
    "lint": "npm run build && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "react dev tools": "./node_modules/.bin/electron ./node_modules/react-devtools/app.js",
    "dist": "npm --prefix ./native run rebuild && vite build && npm run build && electron-builder",
    "build": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uriegel/commander.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uriegel/commander/issues"
  },
  "homepage": "https://github.com/uriegel/commander#readme",
  "dependencies": {
    "electron-settings": "^4.0.4",
    "functional-extensions": "^2.8.0",
    "native": "file:local_modules/native",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.3.6",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "leaflet": "^1.9.4",
    "menubar-react": "^2.3.3",
    "react-leaflet": "^5.0.0",
    "react-progress-control": "^1.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "view-split-react": "^1.2.0",
    "virtual-table-react": "^10.12.0",
    "vite": "^7.2.6",
    "web-dialog-react": "^5.2.0"
  }
}
