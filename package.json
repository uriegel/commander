{
  "name": "commander",
  "version": "1.0.0",
  "description": "A Norton Commander clone based on Electron and React with Typescript",
  "main": "dist/main/index.js",
  "type": "module",
  "author": {
    "name": "Uwe Riegel",
    "email": "uriegel@hotmail.de"
  },
  "build": {
    "appId": "de.uriegel.commander",
    "productName": "Commander",
    "removePackageScripts": true,
    "asar": true,
    "asarUnpack": [],
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "dist/bridge/**/*",
      "python/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python/",
        "to": "python/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icons",
      "desktop": {
        "entry": {
          "StartupWMClass": "commander"
        }
      }
    }
  },
  "scripts": {
    "dev": "npm run build && concurrently \"vite\" \"wait-on http://localhost:5173\"",
    "lint": "npm run build && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dist": "vite build && npm run build && electron-builder",
    "build": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uriegel/commander.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uriegel/commander/issues"
  },
  "homepage": "https://github.com/uriegel/commander#readme",
  "dependencies": {
    "electron-settings": "^5.0.0",
    "filesystem-utilities": "^6.1.1",
    "functional-extensions": "^2.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rust": "file:local_modules/rust"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/leaflet": "^1.9.21",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.11",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.1.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.0.0",
    "leaflet": "^1.9.4",
    "menubar-react": "^2.2.0",
    "react-leaflet": "^5.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "view-split-react": "^1.2.0",
    "virtual-table-react": "^10.10.0",
    "vite": "^7.1.9",
    "wait-on": "^9.0.1",
    "web-dialog-react": "^5.1.1"
  }
}
